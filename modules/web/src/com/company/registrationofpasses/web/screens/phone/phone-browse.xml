<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://phoneBrowse.caption"
        focusComponent="phonesTable"
        messagesPack="com.company.registrationofpasses.web.screens.phone">
    <data readOnly="true">
        <collection id="phonesDc"
                    class="com.company.registrationofpasses.entity.Phone">
            <view extends="_local">
                <property name="employee" view="_minimal">
                    <property name="middleName"/>
                    <property name="firstName"/>
                    <property name="lastName"/>
                </property>
            </view>
            <loader id="phonesDl">
                <query>
                    <![CDATA[select e from registrationofpasses_Phone e]]>
                </query>
            </loader>
        </collection>
        <collection id="employeeDc" class="com.company.registrationofpasses.entity.Employee">
            <view extends="_minimal"/>
            <loader id="employeeDl">
                <query>
                    <![CDATA[select e from registrationofpasses_Employee e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="phonesTable"
            spacing="true">
        <filter id="filter"
                applyTo="phonesTable"
                dataLoader="phonesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="phonesTable"
                    width="100%"
                    dataContainer="phonesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="employee" optionsContainer="employeeDc"/>
                <column id="numberPhone"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="phonesTable.create"/>
                <button id="editBtn" action="phonesTable.edit"/>
                <button id="removeBtn" action="phonesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
