<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://phoneEdit.caption"
        focusComponent="form"
        messagesPack="com.company.registrationofpasses.web.screens.phone">
    <data>
        <instance id="phoneDc"
                  class="com.company.registrationofpasses.entity.Phone">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="phoneDc">
            <column width="350px">
                <maskedField id="numberPhoneField" mask="8(###)###-##-##" valueMode="masked" property="numberPhone"/>
                <!--<textField id="numberPhoneField" property="numberPhone"/>-->

            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
