<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://placeResidenceEdit.caption"
        focusComponent="form"
        messagesPack="com.company.registrationofpasses.web.screens.placeresidence">
    <data>
        <instance id="placeResidenceDc"
                  class="com.company.registrationofpasses.entity.PlaceResidence">
            <view extends="_local">
                <property name="employees" view="_local"/>
            </view>
            <loader/>
            <collection id="employeesDc" property="employees"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="placeResidenceDc">
            <column width="350px">
                <textField id="regionField" property="region"/>
                <textField id="cityField" property="city"/>
                <textField id="settlementField" property="settlement"/>
                <textField id="streetField" property="street"/>
                <textField id="houseField" property="house"/>
                <textField id="corpusField" property="corpus"/>
                <textField id="flatField" property="flat"/>
                <lookupField id="typeAddressField" property="typeAddress"/>
            </column>
        </form>
        <groupBox id="employeesBox" caption="msg://com.company.registrationofpasses.entity/PlaceResidence.employees">
            <table id="employeesTable" dataContainer="employeesDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="middleName"/>
                    <column id="firstName"/>
                    <column id="lastName"/>
                    <column id="dateBirth"/>
                </columns>
                <buttonsPanel>
                    <button action="employeesTable.add"/>
                    <button action="employeesTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
